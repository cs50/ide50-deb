#!/bin/bash

LOG=/var/log/ide50.log
curl -sL https://gist.githubusercontent.com/kzidane/a29a2a8fdb27b12a64618ced18504193/raw/ | sudo bash -s - "$@" 2>&1 | sudo tee -a $LOG
if [ $? -ne 0 ]; then
    echo "Something went wrong! The output has been logged in $LOG"
    exit 1
fi

echo "Update complete!"
echo -e "\nBE SURE TO CLOSE AND RE-OPEN ANY TERMINAL WINDOWS <3\n"
